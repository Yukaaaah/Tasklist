<%= form_for(child, url: task_children_path(@task), method: :post) do |f| %>
  <% if child.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(child.errors.count, "error") %></h2>
      <ul>
      <% child.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">

  <div class="input-field col s8", id="description">
    <%= f.label :description %>
    <%= f.text_field :description ,class: "valiadte" %>
  </div>

  <div class="input-field col s3", id="due_date">
    <%= f.label :due_date %>
    <%= f.text_field :due_date, as: :date, class: "datepicker", html5: true %>
  </div>

  <div class="">
      <button class="btn-floating btn-small waves-effect waves-light red" type="submit" name="action">
          <i class="material-icons right"><%= f.submit "add"%></i>
      </button>
  </div>

</div>

<% end %>
